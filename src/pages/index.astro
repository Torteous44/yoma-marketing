---
import Layout from "../layouts/Layout.astro";
import BayerShader from "../components/BayerShader.astro";
import Section from "../components/Section.astro";
import ScrollNavbar from "../components/ScrollNavbar.astro";
---

<Layout title="Home - Yoma Solutions">
    <ScrollNavbar />

    <main class="flex flex-col items-center bg-[#0a0a0a] gap-2 pt-14 px-2 pb-4">
        <nav
            class="absolute top-3 left-4 right-2 z-50 flex items-center justify-between"
        >
            <img src="/LogoWhite.svg" alt="Yoma Solutions" class="h-8 w-auto" />

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-6">
                <a
                    href="#services"
                    class="font-mono text-sm text-white hover:opacity-70 transition-opacity uppercase tracking-wider"
                    >Services</a
                >
                <a
                    href="#about"
                    class="font-mono text-sm text-white hover:opacity-70 transition-opacity uppercase tracking-wider"
                    >About</a
                >
                <a
                    href="/contact"
                    class="font-mono text-sm text-black bg-white px-4 py-2 rounded-lg hover:opacity-90 transition-opacity uppercase tracking-wider"
                    >Contact</a
                >
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden p-2 text-white hover:opacity-70 transition-opacity"
                aria-label="Toggle menu"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </nav>

        <!-- Mobile Menu Dropdown -->
        <div
            id="mobile-menu"
            class="md:hidden hidden absolute top-16 left-4 right-4 z-50 bg-black/95 backdrop-blur-sm rounded-lg"
        >
            <div class="flex flex-col gap-4 px-4 py-6">
                <a
                    href="#services"
                    class="font-mono text-sm text-white hover:opacity-70 transition-opacity uppercase tracking-wider py-2"
                    >Services</a
                >
                <a
                    href="#about"
                    class="font-mono text-sm text-white hover:opacity-70 transition-opacity uppercase tracking-wider py-2"
                    >About</a
                >
                <a
                    href="/contact"
                    class="font-mono text-sm text-center text-black bg-white px-4 py-3 rounded-lg hover:opacity-90 transition-opacity uppercase tracking-wider"
                    >Contact</a
                >
            </div>
        </div>

        <Section
            id="hero-section"
            class="flex flex-col items-center justify-start relative overflow-hidden"
        >
            <div
                class="max-w-screen-xl w-full text-center px-8 pt-[35vh] relative z-10"
            >
                <h1
                    class="font-clash text-[1.8rem] sm:text-[2.2rem] md:text-[2.7rem] lg:text-[3rem] xl:text-[3rem] font-light leading-tight m-0"
                >
                    We Are a Product Development Studio.
                </h1>
                <p
                    class="font-mono text-base sm:text-lg md:text-xl font-light text-center mx-auto mt-2 text-gray-600 tracking-wide"
                >
                    For Founders That Think Big.
                </p>
                <a
                    href="/contact"
                    class="font-mono mt-8 px-4 py-1 pr-1 text-sm uppercase tracking-wider bg-[#d9d9d9] text-black rounded-full hover:opacity-90 transition-opacity duration-0 inline-flex items-center gap-4 mx-auto cursor-pointer"
                >
                    Contact Us
                    <span
                        class="flex items-center justify-center w-8 h-8 bg-white rounded-full"
                    >
                        <svg
                            class="w-4 h-4 text-black"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M7 17L17 7M17 7H7M17 7v10"></path>
                        </svg>
                    </span>
                </a>
            </div>

            <div
                id="shader-container"
                class="w-full h-full absolute left-0 top-0 z-0"
            >
                <BayerShader color="#000000" pixelSize={2} />
            </div>
        </Section>

        <script>
            // Lock section height to initial viewport measurement
            window.addEventListener("DOMContentLoaded", () => {
                const section = document.getElementById("hero-section");
                if (section) {
                    const initialHeight = window.innerHeight * 1.1;
                    section.style.height = `${initialHeight}px`;

                    // Force canvas to recalculate after height is set
                    requestAnimationFrame(() => {
                        window.dispatchEvent(new Event("resize"));
                    });
                }
            });

            // Mobile menu toggle for main navbar
            const mobileMenuBtn = document.getElementById("mobile-menu-btn");
            const mobileMenu = document.getElementById("mobile-menu");

            mobileMenuBtn?.addEventListener("click", () => {
                mobileMenu?.classList.toggle("hidden");
            });

            // Close mobile menu when clicking a link
            mobileMenu?.querySelectorAll("a").forEach((link) => {
                link.addEventListener("click", () => {
                    mobileMenu?.classList.add("hidden");
                });
            });
        </script>

        <Section
            id="about"
            class="min-h-[60svh] md:min-h-[80svh] flex items-center relative overflow-hidden py-12 md:py-16"
        >
            <img
                src="/circleDithered.svg"
                alt=""
                class="hidden lg:block absolute left-[5%] xl:left-[5%] top-1/2 -translate-y-1/2 w-[35vw] xl:w-[30vw] h-auto pointer-events-none opacity-90"
            />

            <div
                class="px-6 sm:px-8 md:px-12 lg:px-12 lg:pl-[45%] relative z-10 mr-30"
            >
                <p
                    class="font-clash text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-light leading-relaxed text-left w-full"
                >
                    We guide products through their full lifecycle <span
                        class="text-zinc-500"
                        >shaping the idea into a clear plan, designing the brand
                        and experience, developing the technology, and
                        supporting launch, growth, and iteration.</span
                    >
                </p>
            </div>
        </Section>

        <Section
            class="min-h-[100svh] flex items-center relative overflow-hidden"
        >
            <div
                class="max-w-screen-xl w-full px-4 sm:px-6 md:px-8 py-12 sm:py-16 md:py-20 relative z-10"
            >
                <h2
                    class="font-clash text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-light mb-8 sm:mb-12 md:mb-16 max-w-3xl"
                >
                    For Founders Without a Tech Team
                </h2>

                <div class="border-t border-gray-200 pt-8 sm:pt-10 md:pt-12">
                    <p
                        class="font-clash text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-light leading-relaxed indent-12 sm:indent-24 md:indent-36 lg:indent-48 max-w-4xl"
                    >
                        We're the technical team for ambitious business minds.
                        You bring the pitch deck. We build the product â€”
                        strategy, design, development, growth. Everything you
                        need to launch.
                    </p>
                </div>
            </div>

            <img
                src="/Guy.svg"
                alt=""
                class="absolute right-[-10%] sm:right-[-5%] md:right-0 lg:right-[5%] bottom-0 w-[50vw] sm:w-[45vw] md:w-[35vw] lg:w-[28vw] xl:w-[25vw] h-auto pointer-events-none opacity-90"
                style="image-rendering: -webkit-optimize-contrast; image-rendering: crisp-edges; image-rendering: pixelated;"
            />
        </Section>

        <Section id="services" class="min-h-[100svh] flex items-center">
            <div class="max-w-screen-xl w-full px-8 py-16">
                <h2
                    class="font-clash text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-light mb-24"
                >
                    Our Services
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16">
                    <!-- Service 1 -->
                    <div class="space-y-4">
                        <div class="flex items-baseline gap-4">
                            <span class="font-mono text-sm text-gray-400"
                                >01</span
                            >
                            <h3
                                class="font-clash text-2xl sm:text-3xl font-light"
                            >
                                Product Strategy
                            </h3>
                        </div>
                        <ul
                            class="space-y-2 pl-12 font-clash text-base sm:text-lg font-light"
                        >
                            <li>â†’ Idea validation & scoping</li>
                            <li>â†’ Feature roadmaps</li>
                            <li>â†’ Technical architecture</li>
                            <li>â†’ Product planning workshops</li>
                        </ul>
                    </div>

                    <!-- Service 2 -->
                    <div class="space-y-4">
                        <div class="flex items-baseline gap-4">
                            <span class="font-mono text-sm text-gray-400"
                                >02</span
                            >
                            <h3
                                class="font-clash text-2xl sm:text-3xl font-light"
                            >
                                Design & Experience
                            </h3>
                        </div>
                        <ul
                            class="space-y-2 pl-12 font-clash text-base sm:text-lg font-light"
                        >
                            <li>â†’ Brand identity & Digital Direction</li>
                            <li>â†’ UI/UX design</li>
                            <li>â†’ Prototyping</li>
                            <li>â†’ Design systems</li>
                        </ul>
                    </div>

                    <!-- Service 3 -->
                    <div class="space-y-4">
                        <div class="flex items-baseline gap-4">
                            <span class="font-mono text-sm text-gray-400"
                                >03</span
                            >
                            <h3
                                class="font-clash text-2xl sm:text-3xl font-light"
                            >
                                Development
                            </h3>
                        </div>
                        <ul
                            class="space-y-2 pl-12 font-clash text-base sm:text-lg font-light"
                        >
                            <li>â†’ Web apps</li>
                            <li>â†’ Mobile apps</li>
                            <li>â†’ Backend APIs & databases</li>
                            <li>
                                â†’ Integrations (Stripe, Auth, Analytics, etc.)
                            </li>
                        </ul>
                    </div>

                    <!-- Service 4 -->
                    <div class="space-y-4">
                        <div class="flex items-baseline gap-4">
                            <span class="font-mono text-sm text-gray-400"
                                >04</span
                            >
                            <h3
                                class="font-clash text-2xl sm:text-3xl font-light"
                            >
                                Launch & Growth
                            </h3>
                        </div>
                        <ul
                            class="space-y-2 pl-12 font-clash text-base sm:text-lg font-light"
                        >
                            <li>â†’ Deployment & hosting setup</li>
                            <li>â†’ SEO & Distribution</li>
                            <li>â†’ Analytics & reporting</li>
                            <li>â†’ Performance Optimizations</li>
                        </ul>
                    </div>
                </div>
            </div>
        </Section>

        <!-- Footer -->
        <footer
            class="w-full bg-[#0a0a0a] text-white rounded-xl mt-2 py-8 px-4"
        >
            <div class="flex items-center justify-between">
                <img
                    src="/LogoWhite.svg"
                    alt="Yoma Solutions"
                    class="h-8 w-auto"
                />

                <div class="flex items-center gap-8">
                    <a
                        href="/contact"
                        class="font-mono text-sm hover:opacity-70 transition-opacity uppercase tracking-wider"
                    >
                        Contact
                    </a>

                    <span
                        class="font-mono text-sm text-gray-500 uppercase tracking-wider"
                    >
                        Â© 2025
                    </span>
                </div>
            </div>
        </footer>
    </main>
</Layout>
